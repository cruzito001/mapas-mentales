---
import Layout from '../layouts/Layout.astro';
import ClientOnlyMindMapEditor from '../components/ClientOnlyMindMapEditor.jsx';
import ThemeWrapper from '../components/ThemeWrapper.jsx';
---

<Layout title="Editor de Mapas Mentales">
  <div class="editor-container">
    <ThemeWrapper client:load>
      <ClientOnlyMindMapEditor client:load />
    </ThemeWrapper>
  </div>
</Layout>

<style>
	.editor-container {
		width: 100vw;
		height: 100vh;
		overflow: hidden;
		background: var(--bg-primary);
		position: relative;
	}
	
	/* Asegurar que el editor ocupe toda la pantalla */
	:global(html, body) {
		margin: 0;
		padding: 0;
		overflow: hidden;
	}
</style>