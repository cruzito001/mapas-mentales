---
import Layout from '../layouts/Layout.astro';
import MindMapCard from '../components/MindMapCard.jsx';
import BottomNavigation from '../components/BottomNavigation.jsx';
import ThemeWrapper from '../components/ThemeWrapper.jsx';
import MyMapsSection from '../components/MyMapsSection.jsx';
---

<Layout title="Mapas Mentales - Herramienta Educativa">
	<ThemeWrapper client:load>
		<main class="main-container">
			<div class="content-wrapper">
				<MyMapsSection client:load />
			</div>
			
			<BottomNavigation client:load />
		</main>
	</ThemeWrapper>
</Layout>

<style>
	.main-container {
		flex: 1;
		display: flex;
		flex-direction: column;
		padding-top: 20px; /* Sin menú superior */
		padding-bottom: 100px; /* Espacio para la navegación inferior */
		min-height: 100vh;
		background: var(--bg-primary);
	}
	
	.content-wrapper {
		flex: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 16px;
		width: 100%;
	}
	

	
	.cards-section {
		flex: 1;
	}
	
	.cards-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 20px;
		padding-bottom: 20px;
	}
	
	/* Responsive Design */
	@media (max-width: 768px) {
		.content-wrapper {
			padding: 0 12px;
		}
		
		.cards-grid {
			grid-template-columns: 1fr;
			gap: 16px;
		}
		
		.search-section {
			margin: 16px 0;
		}
		
		.filters-section {
			margin-bottom: 20px;
		}
	}
	
	@media (max-width: 480px) {
		.content-wrapper {
			padding: 0 8px;
		}
		
		.cards-grid {
			gap: 12px;
		}
	}
	
	@media (min-width: 1024px) {
		.main-container {
			padding-bottom: 20px; /* Menos espacio en desktop */
		}
		
		.cards-grid {
			grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
			gap: 24px;
		}
		
		.search-section {
			margin: 24px 0;
		}
		
		.filters-section {
			margin-bottom: 28px;
		}
	}
</style>
