---
export interface Props {
	title?: string;
}

const { title = 'Mapas Mentales' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/theme.css" />
	</head>
	<body>
		<div id="app">
			<slot />
		</div>
	</body>
</html>

<style>
	:root {
		/* Colores Tecmilenio - Integrados con sistema de temas */
		--color-primary: #00A651;
		--color-primary-dark: #004225;
		--color-secondary: #00D664;
		--color-accent-orange: #FF9500;
		--color-accent-red: #FF3B30;
		--color-accent-blue: #007AFF;
		
		/* Tipografía */
		--font-family-display: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
		--font-family-text: 'SF Pro Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
		
		/* Tamaños de fuente */
		--font-size-title: 28px;
		--font-size-body: 17px;
		--font-size-caption: 13px;
		
		/* Espaciado */
		--spacing-xs: 4px;
		--spacing-sm: 8px;
		--spacing-md: 16px;
		--spacing-lg: 24px;
		--spacing-xl: 32px;
	}
	
	* {
		box-sizing: border-box;
	}
	
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: var(--font-family-text);
		font-size: var(--font-size-body);
		color: var(--text-primary);
		background-color: var(--bg-primary);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	
	#app {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
	}
	
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-family-display);
		font-weight: 600;
		margin: 0;
	}
	
	h1 {
		font-size: var(--font-size-title);
	}
	
	button {
		font-family: inherit;
		cursor: pointer;
		border: none;
		outline: none;
		background: none;
		transition: all 0.2s ease;
	}
	
	a {
		color: var(--accent-primary);
		text-decoration: none;
		transition: opacity 0.2s ease;
	}
	
	a:hover {
		opacity: 0.7;
	}
</style>
